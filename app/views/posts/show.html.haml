#post_show
	%h1= @post.title
	%p.username
		Shared by
		= @post.user.name
		about
		= time_ago_in_words(@post.created_at)
	.clearfix
		.post_image_description
			= image_tag @post.image.url(:medium)
			.description= simple_format(@post.description)
		.post_data
			= link_to "Visit link", @post.link, class: "button"
			= link_to like_post_path(@post), method: :delete, class: "data" do
				%i.fa.fa-thumbs-o-up
				= pluralize(@post.get_upvotes.size, "like")
			= link_to dislike_post_path(@post), method: :delete, class: "data" do
				%i.fa.fa-thumbs-o-down
				= pluralize(@post.get_upvotes.size, "dislike")
			%p.data
				%i.fa.fa-comments-o
				= pluralize(@post.comments.count, "comment")
			- if @post.user == current_user
				= link_to "edit", edit_post_path(@post), class: "data"
				= link_to "delete", post_path(@post), method: :delete, data: { confirm: "Sure?" }, class: "data"

#comments
	%h2.comment_count= pluralize(@post.comments.count, "Comment")
	- @comments.each do |comment|
		.comment
			%p.username= comment.user.name
			%p.content= comment.content

	= render 'comments/form'
